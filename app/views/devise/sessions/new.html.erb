<h2 class="text-center"><a href="www.digital-ad.be"><img src="../assets/images/DigitalAd_Logo_FC_noback.png"></a></h2>
<h2 class="text-center">Please sign in</h2>
<div class="col-md-6 col-md-offset-3 form-signin">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'form-signin', :role =>
  'form') do |f| %>

  <%= f.email_field :email, :autofocus => true, :class => "form-control", :required => true, :placeholder => "Email
  address" %>
  <%= f.password_field :password, :class => "form-control", :placeholder => "Password", :required => true %>
  <% if devise_mapping.rememberable? -%>
  <div><%= f.check_box :remember_me, :value => "remember-me" %> <%= f.label :remember_me %></div>
  <% end -%>
  <%= f.submit "Sign in", :class => 'btn btn-lg btn-primary btn-block' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
