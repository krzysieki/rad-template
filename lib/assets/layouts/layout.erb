<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <!-- Always force latest IE rendering engine or request Chrome Frame -->
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
  <title><%= data.page.title.present? ? "Plastique :: #{data.page.title}" : "Plastique Theme" %></title>

  <%= stylesheet_link_tag "application" %>

  <%= partial "layouts/ie" %>

  <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0">
</head>
<body>

<%= partial "layouts/modal.html" %>
<%= partial "layouts/primary_nav.html" %>
<%= partial "layouts/secondary_nav.html" %>

<section id="main">
  <%= partial "layouts/top_nav.html" %>
  <div class="container-fluid">
    <%= yield %>
    <%= partial "layouts/footer.html" %>
  </div>
</section>

<%= partial "pages/notification_templates.html" %>

<%= javascript_include_tag "application" %>
<%= javascript_include_tag "docs" %>
<%= javascript_include_tag "docs_charts" %>
<%= javascript_include_tag "documentation" %>
<%= javascript_include_tag "prettify" %>
<%= stylesheet_link_tag "prettify" %>

<script type="text/javascript">
    prettyPrint()
</script>

<script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-35778683-1']);
    _gaq.push(['_trackPageview']);

    (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

</script>

</body>
</html>
